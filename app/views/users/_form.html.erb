<%= render 'shared/errors', obj: @user %>
<div class="row">
  <div class="col-md-12">
    <%= form_for @user, :html => {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :username, for: "username" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", id: "title", placeholder: "Enter a Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :email, for: "email" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter an Email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :password, for: "password" %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter a Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Profile", class: "btn btn-primary btn-md" )%>
        </div>
      </div>
    <% end %>
  </div>
</div>