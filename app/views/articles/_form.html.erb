<%= render 'shared/errors', obj: @article %>
<div class="row">
  <div class="col-md-12">
    <%= form_for @article, :html => {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title, for: "title" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", id: "title", placeholder: "Title of Article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description, for: "description" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-md" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to "Cancel Request and Return to Articles List", articles_path %> ]
</div>